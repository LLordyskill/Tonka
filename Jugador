namespace Tonka.Core;
public class Jugador
{
    public ushort IdJugador { get; set; }
    public byte IdPais { get; set; }
    public byte IdPosicion { get; set; }
    public string Nombre { get; set; }
    public string Apellido { get; set; }
    public DateTime Nacimiento { get; set; }
    public byte NumCamiseta { get; set; }

    public Jugador(ushort idJugador, byte idPais, byte idPosicion, string nombre, string apellido, DateTime nacimiento, byte numCamiseta)
    {
        IdJugador = idJugador;
        IdPais = idPais;
        IdPosicion = idPosicion;
        Nombre = nombre;
        Apellido = apellido;
        Nacimiento = nacimiento;
        NumCamiseta = numCamiseta;
    }
}
